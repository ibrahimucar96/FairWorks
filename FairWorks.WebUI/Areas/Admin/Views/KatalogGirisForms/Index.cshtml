@model IEnumerable<FairWorks.Domain.Entities.KatalogGirisForm>


<p>
    <a class="btn btn-success" asp-controller="KatalogGirisForms" asp-action="Create">Yeni</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.FirmaAdi)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.Adres)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.Telefon)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.Eposta)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.Faks)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.UrunGrupları)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.UrunGrupları.UrunAdi)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.FirmaTip)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.FirmaTip.FirmaTip)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.TemsilEttigiFirma)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.TemsilEttigiFirma.TemsilEdilenFirma)
            </td>
            <td>Islem</td>
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirmaAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Eposta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Faks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UrunGrupları.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UrunGrupları.UrunAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirmaTip.FirmaTipId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirmaTip.FirmaTip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TemsilEttigiFirma.TemsilEttigiFirmaId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TemsilEttigiFirma.TemsilEdilenFirma)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"class="btn btn-primary">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id"class="btn btn-primary">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id"class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

