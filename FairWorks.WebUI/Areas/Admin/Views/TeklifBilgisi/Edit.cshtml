@model FairWorks.Domain.Entities.TeklifBilgisi


<div class="row">
    <div class="col-md-10">
        <form method="post" asp-controller="TeklifBilgisi" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TeklifTarihi" class="control-label"></label>
                <input asp-for="TeklifTarihi" class="form-control" />
                <span asp-validation-for="TeklifTarihi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeklifVerilenm2" class="control-label"></label>
                <input asp-for="TeklifVerilenm2" class="form-control" />
                <span asp-validation-for="TeklifVerilenm2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="m2birimFiyatı" class="control-label"></label>
                <input asp-for="m2birimFiyatı" class="form-control" />
                <span asp-validation-for="m2birimFiyatı" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StandId" class="control-label"></label>
                <select asp-for="StandId" class="form-control" asp-items="ViewBag.StandId"></select>
                <span asp-validation-for="StandId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DovizId" class="control-label"></label>
                <select asp-for="DovizId" class="form-control" asp-items="ViewBag.DovizId"></select>
                <span asp-validation-for="DovizId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OdemePlaniId" class="control-label"></label>
                <select asp-for="OdemePlaniId" class="form-control" asp-items="ViewBag.OdemePlaniId"></select>
                <span asp-validation-for="OdemePlaniId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeklifinSonGecerlilikTarihi" class="control-label"></label>
                <input asp-for="TeklifinSonGecerlilikTarihi" class="form-control" />
                <span asp-validation-for="TeklifinSonGecerlilikTarihi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="salonId" class="control-label"></label>
                <select asp-for="salonId" class="form-control" asp-items="ViewBag.salonId"></select>
                <span asp-validation-for="salonId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <div>
                 <a asp-action="Index"class="btn btn-primary">Listeye Dön</a>
            </div>
        </form>
    </div>
</div>




