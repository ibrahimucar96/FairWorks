@model BiletliZiyaretci

<form method="post" asp-controller="BiletliZiyaretci" asp-action="Update">

    <div class="form-group row">
        <label asp-for="Ad" class="col-md-2 col-form-label"></label>        
        <div class="col-md-10">
            <input type="text" asp-for="Ad" class="form-control" value="@Model.Ad"/>
        </div>       
    </div>
    <div class="form-group row">
        <label asp-for="SoyAd" class="col-md-2 col-form-label"></label>        
        <div class="col-md-10">
            <input type="text" asp-for="SoyAd" class="form-control"value="@Model.SoyAd"/>
        </div>       
    </div>
    <div class="form-group row">
        <label asp-for="FirmaAdı" class="col-md-2 col-form-label"></label>        
        <div class="col-md-10">
            <input type="text" asp-for="FirmaAdı" class="form-control"value="@Model.FirmaAdı"/>
        </div>       
    </div>
    <div class="form-group row">
        <label asp-for="Adres" class="col-md-2 col-form-label"></label>        
        <div class="col-md-10">
            <input type="text" asp-for="Adres" class="form-control"value="@Model.Adres"/>
        </div>       
    </div>
    <div class="form-group row">
        <label asp-for="Telefon" class="col-md-2 col-form-label"></label>        
        <div class="col-md-10">
            <input type="text" asp-for="Telefon" class="form-control"value="@Model.Telefon"/>
        </div>       
    </div>
    <div class="form-group row">
        <label asp-for="Eposta" class="col-md-2 col-form-label"></label>        
        <div class="col-md-10">
            <input type="text" asp-for="Eposta" class="form-control"value="@Model.Eposta"/>
        </div>       
    </div>
    <div class="form-group row">
        <label asp-for="Faks" class="col-md-2 col-form-label"></label>        
        <div class="col-md-10">
            <input type="text" asp-for="Faks" class="form-control"value="@Model.Faks"/>
        </div>       
    </div>
    <div class="form-group row">
        <label asp-for="Meslek" class="col-md-2 col-form-label"></label>        
        <div class="col-md-10">
            <input type="text" asp-for="Meslek" class="form-control"value="@Model.Meslek"/>
        </div>       
    </div>
    <div class="form-group row">
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>

</form>