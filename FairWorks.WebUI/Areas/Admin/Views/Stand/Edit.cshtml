@model FairWorks.Domain.Entities.Stand


<div class="row">
    <div class="col-md-6">
        <form  method="post" asp-controller="Stand" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="StandTipi" class="control-label"></label>
                <input asp-for="StandTipi" class="form-control" />
                <span asp-validation-for="StandTipi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StandKodu" class="control-label"></label>
                <input asp-for="StandKodu" class="form-control" />
                <span asp-validation-for="StandKodu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalonId" class="control-label"></label>
                <select asp-for="SalonId" class="form-control" asp-items="ViewBag.SalonId"></select>
                <span asp-validation-for="SalonId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <div>
                <a asp-action="Index"class="btn btn-primary">Listeye Dön</a>
            </div>
        </form>
    </div>
</div>




