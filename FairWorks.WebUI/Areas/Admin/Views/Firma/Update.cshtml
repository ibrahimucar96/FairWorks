@model Firma

<form method="post" asp-controller="Firma" asp-action="Update">

    <div class="form-group row">
        <label asp-for="FirmaAd" class="col-md-4 col-form-label"></label>        
        <div class="col-md-8">
            <input type="text" asp-for="FirmaAd" class="form-control" value="@Model.FirmaAd"/>
        </div>       
    </div>
    <div class="form-group row">
        <label asp-for="Adres" class="col-md-4 col-form-label"></label>        
        <div class="col-md-8">
            <input type="text" asp-for="Adres" class="form-control"value="@Model.Adres"/>
        </div>       
    </div>
    <div class="form-group row">
        <label asp-for="Telefon" class="col-md-4 col-form-label"></label>        
        <div class="col-md-8">
            <input type="text" asp-for="Telefon" class="form-control"value="@Model.Telefon"/>
        </div>       
    </div>
    <div class="form-group row">
        <label asp-for="Eposta" class="col-md-4 col-form-label"></label>        
        <div class="col-md-8">
            <input type="text" asp-for="Eposta" class="form-control"value="@Model.Eposta"/>
        </div>       
    </div>
    <div class="form-group row">
        <label asp-for="Faks" class="col-md-4 col-form-label"></label>        
        <div class="col-md-8">
            <input type="text" asp-for="Faks" class="form-control"value="@Model.Faks"/>
        </div>       
    </div>
    <div class="form-group row">
        <label asp-for="Ulke" class="col-md-4 col-form-label"></label>        
        <div class="col-md-8">
            <input type="text" asp-for="Ulke" class="form-control"value="@Model.Ulke"/>
        </div>       
    </div>
    <div class="form-group row">
        <label asp-for="Sehir" class="col-md-4 col-form-label"></label>        
        <div class="col-md-8">
            <input type="text" asp-for="Sehir" class="form-control"value="@Model.Sehir"/>
        </div>       
    </div>
    <div class="form-group row">
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>
    <div class="form-group row">
        <a class="btn btn-secondary" asp-action="Index" asp-controller="Firma">Geri Dön</a>
    </div>

</form>