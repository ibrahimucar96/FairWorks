@model FirmaBilgiCreateDto

<form method="post" asp-controller="FirmaBilgi" asp-action="Update">

    @Html.ValidationSummary(true)
    
    
    <div class="form-group row">
        <label asp-for="Adres" class="col-md-4 col-form-label"></label>

        <div class="col-md-8">
            <input type="text" asp-for="Adres" class="form-control" />
            <span asp-validation-for="Adres" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Telefon" class="col-md-4 col-form-label"></label>

        <div class="col-md-8">
            <input type="text" asp-for="Telefon" class="form-control" />
            <span asp-validation-for="Telefon" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="VergiDairesi" class="col-md-4 col-form-label"></label>

        <div class="col-md-8">
            <input type="text" asp-for="VergiDairesi" class="form-control" />
            <span asp-validation-for="VergiDairesi" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <label asp-for="VergiNumarası" class="col-md-4 col-form-label"></label>

        <div class="col-md-8">
            <input type="text" asp-for="VergiNumarası" class="form-control" />
            <span asp-validation-for="VergiNumarası" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="FuarYetkilisi" class="col-md-4 col-form-label"></label>

        <div class="col-md-8">
            <input type="text" asp-for="FuarYetkilisi" class="form-control" />
            <span asp-validation-for="FuarYetkilisi" class="text-danger"></span>
        </div>
    </div>
        
    <div class="form-group row">
        <select id="ddlAlan" asp-for="UcretsizVerilenAlanId" asp-items="@ViewBag.Alanlar">
            <option value="0">Ucretsiz Verilen Alan Seciniz</option>
        </select>
     </div>
        <div class="form-group row">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>

</form>